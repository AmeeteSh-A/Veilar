<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:as9="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        as9:bggradient="black; #FFFFFF | radial">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VEILAR STRESS TEST"
            android:textSize="24sp"
            android:textStyle="bold"
            as9:gradient="cyan; magenta; yellow | linear | 45"
            as9:interaction="glow"
            as9:shade="white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_poly"
            android:text="7-GON\nSHRINK"
            android:textColor="#FFF"
            as9:size="110dp"
            as9:shape="gon:7"
            as9:bggradient="orange; crimson | linear | 90"
            as9:interaction="shrink, vibe"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btn_copy"
            android:text="COPY CAT\n(SQUIRCLE)"
            android:textColor="#FFF"
            android:layout_width="0dp"
            android:layout_height="0dp"
            as9:shape="squircle"
            as9:radius="25dp"
            as9:bggradient="id:btn_poly"
            as9:interaction="pop"
            app:layout_constraintTop_toTopOf="@id/btn_poly"
            app:layout_constraintBottom_toBottomOf="@id/btn_poly"
            app:layout_constraintStart_toEndOf="@id/btn_poly"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/color_lab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color Math: Blue + Red_light + White"
            as9:shade="blue+light_red+white"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/btn_poly"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btn_mix"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:text="CALCULATED PURPLE (DIM)"
            as9:bgshade="blue+light_red+white"
            as9:shape="cut"
            as9:interaction="dim"
            app:layout_constraintTop_toBottomOf="@id/color_lab_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/percent_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            as9:shape="pill"
            as9:bgshade="dark_gray"
            as9:interaction="glow"
            app:layout_constraintTop_toBottomOf="@id/btn_mix">

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_30"
                android:text="30%"
                as9:width="30%"
                android:layout_height="match_parent"
                as9:bgshade="orange"
                as9:shape="squircle"
                as9:radius="34dp"
                as9:interaction="shrink"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:layout_width="0dp"
                android:id="@+id/btn_70"
                android:text="70%"
                as9:width="70%"
                android:layout_height="match_parent"
                as9:bggradient="lime; green; black | sweep"
                as9:shape="squircle"
                as9:radius="14dp"
                as9:interaction="pop, vibe"
                app:layout_constraintStart_toEndOf="@id/btn_30" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  PURE PILL SHAPE  "
            android:padding="12dp"
            android:textColor="#000"
            android:textStyle="bold"
            as9:bgshade="white"
            as9:shape="circle"
            as9:interaction="pop"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/percent_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/ref_test"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="I COPY THE BADGE COLOR (WHITE)"
            android:textColor="#000"
            as9:bgshade="id:badge"
            as9:shape="cut"
            as9:radius="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/badge" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>